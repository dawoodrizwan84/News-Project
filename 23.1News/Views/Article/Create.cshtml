@model _23._1News.Models.View_Models.ArticleVM

@{
    ViewData["Title"] = "Create";
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}






<div class="navbar navbar-expand" style="margin-top:50px">
    <partial name="_LoginPartial" />
</div>

<h1 style="text-align:center;margin-bottom:10px">Create Article</h1>

<form id="new-articles-form" asp-action="Create" enctype="multipart/form-data" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="DateStamp" class="control-label">Date Stamp</label>
        <input asp-for="DateStamp" class="form-control" />
        <span asp-validation-for="DateStamp" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LinkText" class="control-label">Link Text</label>
        <input asp-for="LinkText" class="form-control" />
        <span asp-validation-for="LinkText" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Headline" class="control-label">Headline</label>
        <input asp-for="Headline" class="form-control" />
        <span asp-validation-for="Headline" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ContentSummary" class="control-label">Content Summary</label>
        <input asp-for="ContentSummary" class="form-control" />
        <span asp-validation-for="ContentSummary" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Content" class="control-label">Content</label>
        <div id="QuillEditor">
        </div>
    </div>

    <div class="form-group">
        <label asp-for="ChosenCategory" class="control-label">Category</label>
        <select asp-for="ChosenCategory" asp-items="Model.Categories" class="form-control">
            <option value="">Select a category</option>
        </select>
        <span asp-validation-for="ChosenCategory" class="text-danger"></span>
    </div>

    <div class="form-group">
        <dl>
            <dt>
                <label asp-for="File"></label>
            </dt>
            <dd>
                <input asp-for="File" type="file">
                <img src="@Model.File" alt="Image Preview" height="100" width="100" />
                <span asp-validation-for="File"></span>

            </dd>
        </dl>
        <input asp-page-handler="Upload" class="btn btn-primary" type="submit" value="Upload and Save" onclick="typevalfunc()" />


    </div>


    @*  <div class="form-group mt-3">
    <input type="submit" value="Create" class="btn btn-primary" />
    </div> *@
</form>





<script>
    function typevalfunc() {
        document.getElementById("File").click();
    }
